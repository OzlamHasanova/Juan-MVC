
@model IEnumerable<SlideItem>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table with contextual classes</h4>
            <a asp-action="Create">Create Slide</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Subtitle
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Button
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var slide in Model){
                            <tr class="table-info">
                                <td>
                                    @slide.SubTitle
                                </td>
                                <td>
                                    @slide.Title
                                </td>
                                <td>
                                    @slide.Desc
                                </td>
                                <td>
                                    @slide.Button
                                </td>
                                <td>
                                   <a asp-action="Detail" asp-route-id="@slide.Id" class=" btn btn-primary">Detail
                                       <i class="mdi mdi-information-outline" style="color:white"></i>
                                       </a>
                                    <a asp-action="Update" asp-route-id="@slide.Id" class=" btn btn-primary">
                                        Update
                                        <i class="mdi mdi-greace-pencil" style="color:white"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@slide.Id" class=" btn btn-primary">
                                        Delete
                                        <i class="mdi mdi-delete" style="color:white"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
