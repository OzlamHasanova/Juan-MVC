@model SlideItem

@{   
 ViewData["Title"] = "Create";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Slide</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label>SubTitle</label>
                    <input asp-for="SubTitle" class="form-control" placeholder="SubTitle" />
                    <span class="text-danger" asp-validation-for="SubTitle"></span>
                </div>
                <div class="form-group">
                    <label>Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Title" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input asp-for="Desc" class="form-control" placeholder="Description" />
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label>Button</label>
                    <input asp-for="Button" class="form-control" placeholder="Button" />
                    <span class="text-danger" asp-validation-for="Button"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>


        </div>
    </div>
</div>
